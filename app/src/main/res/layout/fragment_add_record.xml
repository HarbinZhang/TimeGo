<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timego.harbin.timego.AddRecordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/main_info_tv"
            />

        <RadioGroup
            android:id="@+id/main_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/study_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study"
                android:checked="true" />
            <RadioButton
                android:id="@+id/entertain_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entertain"/>
            <RadioButton
                android:id="@+id/sleep_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep"/>
            <RadioButton
                android:id="@+id/exercise_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/main_eff_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/eff_5_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />
            <RadioButton
                android:id="@+id/eff_4_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:checked="true" />
            <RadioButton
                android:id="@+id/eff_3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"/>
            <RadioButton
                android:id="@+id/eff_2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"/>
            <RadioButton
                android:id="@+id/eff_1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
        </RadioGroup>

        <TextView
            android:id="@+id/main_duration_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/main_hour_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 Hour"/>
            <Button
                android:id="@+id/main_min_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 min"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/main_reset_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"/>
            <Button
                android:id="@+id/main_ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"/>
        </LinearLayout>


    </LinearLayout>




</FrameLayout>
